<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white">

    <LinearLayout android:id="@+id/playPhoneContain"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginRight="15dp"
        android:gravity="right">

        <Button android:id="@+id/play_phonenum"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_us"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/mSocialBiao"
        android:layout_below="@id/playPhoneContain"
        android:layout_width="match_parent"
        android:layout_height="600dp">
    <TableLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/playPhoneContain"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        >
        <TableRow>
            <TextView android:id="@+id/tv11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zhuce_gongsi"
                android:textColor="@android:color/darker_gray"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/register_company"
                android:padding="8dip"
                />

            <TextView android:id="@+id/tv12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/jichang_baoshui"
                android:drawablePadding="3dp"
                android:textColor="@android:color/darker_gray"
                android:drawableTop="@drawable/change_tax"
                android:padding="8dip"/>

            <TextView android:id="@+id/tv13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/shebao_fuwu"
                android:textColor="@android:color/darker_gray"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/social_services"
                android:padding="8dip"/>
        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"/>
        <TableRow>
            <TextView android:id="@+id/tv21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fapiao_fuwu"
                android:drawablePadding="3dp"
                android:textColor="@android:color/darker_gray"
                android:drawableTop="@drawable/invoice_server"
                android:padding="8dip"/>

            <TextView android:id="@+id/tv22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zhuce_shangbiao"
                android:textColor="@android:color/darker_gray"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/register_brand"
                android:padding="8dip"/>

            <TextView android:id="@+id/tv23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/guzhu_baoxian"
                android:drawablePadding="3dp"
                android:textColor="@android:color/darker_gray"
                android:drawableTop="@drawable/employer"
                android:padding="8dip"/>
        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"/>
        <TableRow>
            <TextView android:id="@+id/tv31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/biaogeng_fuwu"
                android:drawablePadding="3dp"
                android:textColor="@android:color/darker_gray"
                android:drawableTop="@drawable/change_server"
                android:padding="8dip"/>

            <TextView android:id="@+id/tv32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zhuce_zijin"
                android:textColor="@android:color/darker_gray"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/register_money"
                android:padding="8dip"/>

            <TextView android:id="@+id/tv33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:text="@string/zhuxiao_fuwu"
                android:drawablePadding="3dp"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/register_can"
                android:padding="8dip"/>
        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"/>
        <TableRow>
            <TextView android:id="@+id/tv41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/laowu_paiqian"
                android:drawablePadding="3dp"
                android:textColor="@android:color/darker_gray"
                android:drawableTop="@drawable/labour_service"
                android:padding="8dip"/>

            <TextView android:id="@+id/tv42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/qita_zhengjian"
                android:drawablePadding="0dp"
                android:textColor="@android:color/darker_gray"
                android:drawableTop="@drawable/other_certificate"
                android:padding="8dip"/>

            <TextView android:id="@+id/tv43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>
    </TableLayout>
    </ScrollView>

</RelativeLayout>
