<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="7dp"
        android:background="@android:color/white"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/mPriaseHeadImg"
            android:layout_width="50dp"
            android:src="@mipmap/comp_n_beixuan"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/mPriaseName"
            android:layout_toRightOf="@id/mPriaseHeadImg"
            android:layout_width="wrap_content"
            android:text="姓名"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/mPriasePhone"
            android:layout_toRightOf="@id/mPriaseName"
            android:layout_width="wrap_content"
            android:text="136435987968996"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/mFlowNum"
            android:layout_width="wrap_content"
            android:text="1"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray"
        android:layout_height="0.01dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_height="350dp">
        <TextView
            android:id="@+id/mStyleName"
            android:layout_width="wrap_content"
            android:text="企业核名"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/mProgressImg"

            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/mStartTimeLin"
            android:layout_below="@id/mStyleName"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/mProgressImg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="开始时间："
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/mStartTime"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mEndTimeLin"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/mProgressImg"
            android:layout_below="@id/mStartTimeLin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="结束时间："
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/mEndTime"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/result"
           android:layout_below="@id/mEndTimeLin"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="结果图片："
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/mTabLayout"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/mProgressImg"
            android:layout_below="@id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
        <TableRow>

            <ImageView
                android:id="@+id/Img01"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/Img02"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:visibility="invisible"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/Img03"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"/>
            <ImageView
                android:id="@+id/Img04"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:visibility="invisible"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"/>

        </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/Img05"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:src="@mipmap/ic_launcher"/>

                <ImageView
                    android:id="@+id/Img06"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:src="@mipmap/ic_launcher"/>

                <ImageView
                    android:id="@+id/Img07"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:src="@mipmap/ic_launcher"/>
                <ImageView
                    android:id="@+id/Img08"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:src="@mipmap/ic_launcher"/>

            </TableRow>

        </TableLayout>
        <LinearLayout
            android:id="@+id/mLinAppriase"
            android:layout_toRightOf="@id/mProgressImg"
            android:layout_below="@id/mTabLayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="评分："
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/star_img1"
                        android:layout_width="35dp"
                        android:background="@drawable/list_icon_star_big_empty"
                        android:layout_height="35dp" />
                    <ImageView
                        android:id="@+id/star_img2"
                        android:layout_width="35dp"
                        android:background="@drawable/list_icon_star_big_empty"
                        android:layout_height="35dp" />
                    <ImageView
                        android:layout_width="35dp"
                        android:id="@+id/star_img3"
                        android:background="@drawable/list_icon_star_big_empty"
                        android:layout_height="35dp" />
                    <ImageView
                        android:id="@+id/star_img4"
                        android:layout_width="35dp"
                        android:background="@drawable/list_icon_star_big_empty"
                        android:layout_height="35dp" />
                    <ImageView
                        android:id="@+id/star_img5"
                        android:layout_width="35dp"
                        android:background="@drawable/list_icon_star_big_empty"
                        android:layout_height="35dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="评语："
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent" />
                <TextView
                    android:text=""
                    android:id="@+id/mTextAppriase"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_toRightOf="@id/mProgressImg"
            android:layout_below="@id/mLinAppriase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/mFinallyText"
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/holo_red_dark"
                android:text="要先评价完才能看下一步"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/mProgressAppraise"
                android:layout_width="100dp"
                android:text="评  价"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_background_circle"
                android:layout_height="40dp" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>